@{
    ViewBag.Title = "Queue Demo";
}

<script type="text/javascript">


    (function poll(){
        setTimeout(function () {
            $.ajax({
                url: '@Url.Action("GetMessage")',
                success: function (data) {
                    $("#pMessages").text(data);

                    poll();
                }})
                }, 5000);
                })();
</script>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h2>Azure Storage -Queues, Tables</h2>
            <p></p>
        </div>
    </div>
</div>
<br/>
<div class="row" style="height:100%;">
    <div class="col-md-6">
        <h3>Send Message</h3>
        <p><input type="button" title="Send Message" value="Send Message" onclick="$.post('@Url.Action("SendMessage", "Queue", new { inputMessage="hello"})')" /></p>
        <p><input type="button" title="Clear Messages" value="Clear Messages" onclick="$.post('@Url.Action("ClearMessages")'); $('#pMessages').empty();" /></p>
    </div>

    <div class="col-md-6" style="border-left: thick double grey;">
        <h3>Message Window</h3>
        <p id="pMessages" />
    </div>
</div>
